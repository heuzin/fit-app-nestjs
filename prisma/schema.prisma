generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement()) 
  firstName String
  lastName  String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  role      Role      @default(USER)
  profile   Profile?
  routine   Routine[]
}

model Profile {
  id     Int    @default(autoincrement()) @id
  bio    String
  weight Int
  height Int
  user   User   @relation(fields: [userId], references: [id])
  userId Int    @unique
}

model Routine {
  id        Int       @default(autoincrement()) @id  
  type      Type?
  program   Program?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  // sheet Sheet[]
}

